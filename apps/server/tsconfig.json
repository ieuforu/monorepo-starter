{
  "extends": "@repo/typescript-config/base.json",
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "types": ["node", "bun"],
    "baseUrl": ".",
    "paths": {
      "@repo/db": ["../../packages/db/src/index.ts"],
      "@repo/api": ["../../packages/api/src/index.ts"],
      "@repo/auth": ["../../packages/auth/src/index.ts"],
      "@repo/utils": ["../../packages/utils/src/index.ts"],
      "@repo/validators": ["../../packages/validators/src/index.ts"],
      "@repo/server": ["../../apps/server/src/index.ts"]
    }
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "dist"],
  "references": [
    { "path": "../../packages/db" },
    { "path": "../../packages/api" },
    { "path": "../../packages/auth" },
    { "path": "../../packages/utils" },
    { "path": "../../packages/validators" },
    { "path": "../../apps/server" }
  ]
}
