    "@repo/utils": "workspace:*",
    "@repo/validators": "workspace:*",
    "@repo/auth": "workspace:*",
    "drizzle-orm": "catalog:data-layer",
    "hono": "catalog:data-layer"
  },
  "devDependencies": {
    "@repo/typescript-config": "workspace:*",
    "@types/bun": "catalog:"
  }
}
