{
  "$schema": "https://biomejs.dev/schemas/2.3.10/schema.json",
  "files": { "ignoreUnknown": true },
  "vcs": {
    "enabled": true,
    "clientKind": "git",
    "useIgnoreFile": true
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 100
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "suspicious": {
        "noExplicitAny": "off"
      },
      "style": {
        "noNonNullAssertion": "off",
        "useImportType": "error"
      }
    }
  },
  "assist": {
    "actions": {
      "source": { "organizeImports": "on" }
    }
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "single",
      "semicolons": "asNeeded"
    }
  },
  "css": {
    "parser": { "tailwindDirectives": true },
    "formatter": { "enabled": true }
  },
  "overrides": [
    {
      "includes": [
        "**/node_modules/**",
        "**/.next/**",
        "**/dist/**",
        "**/build/**",
        "pnpm-lock.yaml"
      ],
      "linter": { "enabled": false },
      "formatter": { "enabled": false }
    }
  ]
}
