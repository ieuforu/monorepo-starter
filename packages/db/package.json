{
  "name": "@repo/db",
  "version": "0.0.1",
  "type": "module",
  "sideEffects": false,
  "types": "./dist/index.d.mts",
  "exports": {
    ".": {
      "types": "./dist/index.d.mts",
      "import": "./dist/index.mjs"
    }
  },
  "scripts": {
    "build": "tsdown --entry src/index.ts",
    "dev": "tsdown --entry src/index.ts --watch",
    "db:generate": "drizzle-kit generate",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio",
    "seed": "tsx --env-file=.env ./src/seed.ts"
  },
  "devDependencies": {
    "drizzle-kit": "^0.31.8",
    "drizzle-seed": "^0.3.1",
    "tsdown": "^0.18.0",
    "tsx": "^4.21.0"
  },
  "dependencies": {
    "drizzle-orm": "^0.45.1",
    "mysql2": "^3.16.0"
  }
}
