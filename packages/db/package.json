{
  "name": "@repo/db",
  "version": "0.0.1",
  "type": "module",
  "types": "./src/index.ts",
  "exports": {
    ".": {
      "types": "./src/index.ts",
      "development": "./src/index.ts",
      "import": "./src/index.ts",
      "default": "./src/index.ts"
    },
