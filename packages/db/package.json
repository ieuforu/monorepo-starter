{
  "name": "@repo/db",
  "version": "0.0.1",
  "type": "module",
  "sideEffects": false,
  "types": "./dist/index.d.mts",
  "exports": {
    ".": {
      "types": "./dist/index.d.mts",
      "development": "./src/index.ts",
      "default": "./dist/index.mjs"
    },
    "./client": {
      "types": "./dist/client.d.mts",
      "development": "./src/client.ts",
      "default": "./dist/client.mjs"
    },
    "./schema": {
      "types": "./dist/schema/index.d.mts",
      "development": "./src/schema/index.ts",
      "default": "./dist/schema/index.mjs"
    }
  },
  "scripts": {
    "build": "tsdown",
    "db:generate": "drizzle-kit generate",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio",
    "db:seed": "bun src/seed.ts",
    "lint": "turbo lint --filter=@repo/db"
  },
  "devDependencies": {
    "@repo/tsdown-config": "workspace:*",
    "drizzle-kit": "^0.31.8",
    "drizzle-seed": "^0.3.1",
    "tsdown": "catalog:"
  },
  "dependencies": {
    "drizzle-orm": "catalog:",
    "drizzle-zod": "^0.8.3",
    "mysql2": "^3.16.0",
    "zod": "catalog:"
  }
}
