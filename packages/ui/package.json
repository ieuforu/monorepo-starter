    "lint": "eslint . --max-warnings 0"
  },
  "devDependencies": {
    "@repo/typescript-config": "workspace:*",
    "tsup": "^8.5.1",
    "typescript": "^5.9.3",
    "@types/react": "^19.0.0"
  },
  "peerDependencies": {
    "react": "^19.0.0",
    "react-dom": "^19.0.0"
  }
