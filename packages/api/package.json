{
  "name": "@repo/api",
  "version": "0.0.1",
  "type": "module",
  "types": "./dist/index.d.mts",
  "exports": {
    ".": {
      "types": "./dist/index.d.mts",
      "import": "./dist/index.mjs"
    },
    "./root": {
      "types": "./dist/root.d.mts",
      "import": "./dist/root.mjs"
    }
  },
  "scripts": {
    "build": "tsdown --entry src/index.ts --entry src/root.ts",
    "dev": "tsdown --entry src/index.ts --entry src/root.ts --watch"
  },
  "devDependencies": {
    "tsdown": "^0.18.0"
  }
}
