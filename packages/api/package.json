{
  "name": "@repo/api",
  "version": "0.0.0",
  "private": true,
  "sideEffects": false,
  "types": "./dist/index.d.ts",
  "module": "./dist/index.js",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup src/index.ts src/root.ts --format esm --dts",
    "dev": "tsup src/index.ts src/root.ts --format esm --dts --watch",
    "lint": "eslint . --max-warnings 0"
  },
  "devDependencies": {
    "@repo/typescript-config": "workspace:*",
    "tsup": "^8.5.1",
    "typescript": "^5.9.3"
  }
}
